---
import { Picture } from "astro:assets";
import heroImage from "@/assets/hero.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";

export interface Props {
  headline: string;
  intro: string;
  actions: {
    label: string;
    icon: string;
    outline: boolean;
    href: string;
  }[];
}

const {headline, intro, actions} = Astro.props;


---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      {headline}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl" set:html={intro}>

    </p>
<div class="mt-6 flex flex-col sm:flex-row gap-3">
    {(actions ?? []).map(({ label, icon, outline, href }) => (
      <Link
        href={href}
        style={outline ? "outline" : undefined}
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
            {icon && <Icon class={`w-5 h-5 ${outline ? 'text-black' : 'text-white'}`} name={icon} />}
        {label}

      </Link>
    ))}
    </div>
  </div>
</main>
